<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ClassifierFragment">

    <Button
        android:id="@+id/classifier_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Clasificar"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/class_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="-"
        android:textColor="@color/textColorPrimary"
        android:textSize="28sp"
        tools:text="SPOT" />

    <TextView
        android:id="@+id/timestamp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/class_label"
        android:layout_centerInParent="true"
        android:text="-"
        android:textColor="@color/textColorPrimary"
        android:textSize="28sp"
        tools:text="TIMESTAMP" />

    <TextView
        android:id="@+id/sample_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:textColor="@color/textColorSecondary"
        android:textSize="18sp"
        tools:text="TamaÃ±o del dataset: - muestras" />

</RelativeLayout>